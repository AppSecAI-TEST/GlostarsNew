<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.golstars.www.glostars.inputCode">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <EditText
            android:id="@+id/numberinput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/roundededittext"
            android:ems="4"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:hint="_ _ _ _"
            android:cursorVisible="false"
            android:inputType="number"
            android:maxLength="4"
            android:singleLine="true"
            android:textSize="45sp"
            android:textStyle="italic"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="52dp"
            android:layout_below="@+id/banner"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resend code"
            android:textSize="16sp"
            android:textColor="@color/lightViolate"
            android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/numberinput"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_alignTop="@+id/submit"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/submit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textSize="16sp"
            android:textColor="@color/lightViolate"
            android:background="@drawable/roundedbutton"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginTop="39dp"
            app:layout_constraintTop_toBottomOf="@+id/resend"
            app:layout_constraintVertical_bias="1.0"
            android:layout_below="@+id/numberinput"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="A verification code has been sent to your email. Enter the code below to open your account."
            android:textColor="@color/lightViolate"
            android:layout_gravity="top"
            android:layout_marginTop="70dp"
            android:textSize="20sp" />
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
