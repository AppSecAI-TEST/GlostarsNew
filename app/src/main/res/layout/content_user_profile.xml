<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_user_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="10dp"
    android:paddingRight="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.golstars.www.glostars.user_profile"
    tools:showIn="@layout/activity_user_profile">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/userLIN"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation = "vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/profileuserPIC"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/home"/>

                <TextView
                    android:id="@+id/profileuserNAME"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/profileuserPIC"
                    android:layout_toRightOf="@+id/profileuserPIC"
                    android:layout_marginLeft="16dp"
                    android:text="USERNAME"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>



                <TextView
                    android:id="@+id/profileuserLOCATION"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/profileuserPIC"
                    android:layout_below="@+id/profileuserNAME"
                    android:layout_marginLeft="16dp"
                    android:text="LOCATION"
                    android:textColor="@color/darkGrey"
                    android:layout_marginTop="2dp"
                    android:textSize="12sp"/>


                <Button
                    android:id="@+id/profileuserFOLLOW"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="follow"
                    android:textAllCaps="true"
                    android:textColor="@color/colorAccent"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="32dp"
                    android:background="@drawable/followbutton"
                    android:layout_below="@+id/profileuserLOCATION"/>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/useraboutBANNER"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About Me : "
                    android:textAllCaps="false"
                    android:textColor="@color/darkGrey"
                    />

                <TextView
                    android:id="@+id/useraboutTEXT"
                    android:text="texttexttexttexttexttetexttexttexttexttexttexttexttextxttexttexttexttexttext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"/>


                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/userinterestBANNER"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Interests : "
                    android:textAllCaps="false"
                    android:textColor="@color/darkGrey"
                    />

                <TextView
                    android:id="@+id/userinterestTEXT"
                    android:text="texttexttexttexttexttetexttexttexttexttexttexttexttextxttexttexttexttexttext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>

            <View
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/darkGrey"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recognition: "/>


                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@android:drawable/btn_star"
                    android:layout_marginLeft="40dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:layout_marginLeft="8dp"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@android:drawable/btn_star"
                    android:layout_marginLeft="40dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:layout_marginLeft="8dp"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@android:drawable/btn_star"
                    android:layout_marginLeft="40dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:layout_marginLeft="8dp"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@android:drawable/btn_star"
                    android:layout_marginLeft="40dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:layout_marginLeft="8dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:background="@color/lightViolate">

                <TextView
                    android:id="@+id/numberofposts"
                    android:paddingStart="8dp"
                    android:textColor="@color/darkGrey"
                    android:layout_gravity="center_vertical"
                    android:text=" 24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:text=" Photos"
                    android:textColor="@color/darkGrey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"/>

                <View
                    android:layout_gravity="center_vertical"
                    android:layout_width="0.5dp"
                    android:layout_height="22dp"
                    android:background="@color/black"
                    />


                <TextView
                    android:paddingStart="8dp"
                    android:text="Following"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/darkGrey"
                    android:layout_weight="0.3"/>

                <TextView
                    android:id="@+id/numberoffollowing"
                    android:layout_gravity="center_vertical"
                    android:text=" 10"
                    android:paddingEnd="16dp"
                    android:textColor="@color/darkGrey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />



                <View
                    android:layout_gravity="center_vertical"
                    android:layout_width="0.5dp"
                    android:layout_height="22dp"
                    android:background="@color/black"
                    />

                <TextView
                    android:id="@+id/numberoffollowers"
                    android:paddingStart="8dp"
                    android:textColor="@color/darkGrey"
                    android:layout_gravity="center_vertical"
                    android:text="Followers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"/>

                <TextView
                    android:layout_gravity="center_vertical"
                    android:text=" 1512"
                    android:paddingEnd="16dp"
                    android:textColor="@color/darkGrey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

           <include
               layout="@layout/profileposts"
               />


        </LinearLayout>




    </ScrollView>

</RelativeLayout>
