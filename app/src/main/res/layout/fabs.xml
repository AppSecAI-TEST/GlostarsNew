<com.github.clans.fab.FloatingActionMenu
    android:id="@+id/menu_down"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:layout_gravity="bottom|end"
    fab:menu_showShadow="false"
    fab:menu_colorNormal="@color/colorAccent"
    fab:menu_fab_size="normal"
    fab:menu_openDirection="up"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto">

    <com.github.clans.fab.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_size="mini"
        fab:fab_shadowColor="#00FFFFFF"
        android:visibility="visible"
        android:background="@color/colorAccent"
        android:src="@drawable/home"
        android:id="@+id/homeFAB"
        />


    <com.github.clans.fab.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_size="mini"
        fab:fab_shadowColor="#00FFFFFF"
        android:id="@+id/profileFAB"
        android:src="@drawable/nopicmale"

        />

    <com.github.clans.fab.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_size="mini"
        fab:fab_shadowColor="#00FFFFFF"
        android:id="@+id/competitionFAB"
        android:src="@drawable/competition"

        />

    <com.github.clans.fab.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_size="mini"
        fab:fab_shadowColor="#00FFFFFF"
        android:id="@+id/cameraFAB"
        android:src="@drawable/upload"
        />

    <com.github.clans.fab.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_size="mini"
        fab:fab_shadowColor="#00FFFFFF"
        android:id="@+id/notificationFAB"
        android:src="@drawable/notification_icon"
        />



</com.github.clans.fab.FloatingActionMenu>